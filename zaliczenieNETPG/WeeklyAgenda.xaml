<Window x:Class="zaliczenieNETPG.WeeklyAgenda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeeklyAgenda" Height="500" Width="900" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Monday" Grid.Column="0" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Width="93" FontSize="20" Height="37"/>
            <Label Content="Tuesday" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Width="93" FontSize="20" Height="37"/>
            <Label Content="Wednesday" Grid.Column="2" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Width="117" FontSize="20" Height="37"/>
            <Label Content="Thursday" Grid.Column="3" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Width="93" FontSize="20" Height="37"/>
            <Label Content="Friday" Grid.Column="4" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Width="93" FontSize="20" Height="37"/>
            <Label Content="Saturday" Grid.Column="5" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Width="93" FontSize="20" Height="37"/>
            <Label Content="Sunday" Grid.Column="6" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Top" Width="93" FontSize="20" Height="37"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Label Content="Weekly Agenda" HorizontalAlignment="Center" Margin="290,6,269,0" VerticalAlignment="Top" FontSize="44" Width="333"/>
        <Button Content="Return" HorizontalAlignment="Left" Margin="635,10,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="35" Width="232" Height="58" Click="Button_Click"/>

    </Grid>
</Window>
